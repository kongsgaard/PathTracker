<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <root>
      <level value="ALL" />
    </root>

    <logger name="InventoryLogger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="Inventory" />
    </logger>


    <appender name="Inventory" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{InventoryLogFileName}.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="100MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>

    

    <logger name="RequestCoordinatorLogger" additivity="false">
      <level value="ALL" />
      <appender-ref ref="RequestCoordinator" />
    </logger>
    
    <appender name="RequestCoordinator" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{RequestCoordinatorLogFileName}.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="100MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %level %logger - %message%newline" />
      </layout>
    </appender>


  </log4net>
</configuration>